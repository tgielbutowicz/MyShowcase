<%= form_for @post do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <strong>Title:</strong></br><%= f.text_field :title %>
  </div>
  <div class="field">
    <strong>Content:</strong></br><%= f.text_area :content %>
  </div>
  <div class="field">
<%= fields_for :tags_string do |fa| %>
<strong>Tags:</strong></br><%= fa.text_field :name %>
<% end %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>