<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/tags_cloud' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>Welcome in MyShowcase,</h1>

  <p>
    This is the home page for the MyShowecase.
  </p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>